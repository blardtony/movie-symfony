{% extends 'base.html.twig' %}

{% block title %}Fiche {{movie.name}}{% endblock %}

{% block stylesheets %}
  <style>
    img {
      width: 100%;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h2>{{movie.name}}</h2>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-4">
        <img src="{{movie.cover}}" alt="Affiche du film {{movie.name}}">
      </div>
      <div class="col-lg-8">
        <p>Date de sortie : {{ movie.date.format('d/m/Y') }}</p>
        <p>De <a href="{{path('authors', {id: movie.author.id})}}">{{movie.author.name}}</a></p>
        <p>
          Genres :
          {% for category in movie.category %}
              <a href="{{path('categories', {id: category.id})}}">{{category.name}}</a>
          {% endfor %}
        </p>
        <p>Pays : {{movie.country}}</p>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-12">
        <h2 class="text-center">Synopsis</h2>
        <p class="text-justify">{{movie.description}}</p>
      </div>
    </div>
  </div>
{% endblock %}
