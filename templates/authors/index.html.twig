{% extends 'base.html.twig' %}

{% block title %}Fiche {{author.name}}{% endblock %}

{% block stylesheets %}
  <style>

  </style>
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h2>{{author.name}}</h2>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-4">
        <img src="{{author.photo}}" alt="Photo de {{author.name}}">
      </div>
      <div class="col-lg-8">
        <p>Date de naissance : {{ author.birthday.format('d/m/Y') }}</p>
        <p>Nationalit√© : {{author.nationality}}</p>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-12">
        <h2>Biographie</h2>
        <p class="text-justify">{{author.biography}}</p>
      </div>
    </div>
    <h2>Filmographie</h2>
    <div class="row mt-5">
      {% for movie in author.movies %}
        <div class="col-lg-6">
          <div class="card mt-2" style="width:400px">
            <div class="card-body">
              <h4 class="card-title text-center">{{movie.name}}</h4>
            </div>
            <img class="card-img-top" src="{{movie.cover}}" alt="" width="100%" height="50%">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
