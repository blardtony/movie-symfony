{% extends 'base.html.twig' %}

{% block title %}Fiche {{category.name}}{% endblock %}

{% block stylesheets %}
  <style>
  .card-body {
    height: 7rem;
  }
  </style>
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h2>{{category.name}}</h2>
      </div>
    </div>
    <div class="row">
      {% for movie in category.movies %}
        <div class="col-lg-3">
          <div class="card mt-5" style="width:250px">
            <div class="card-body">
              <a href="{{path('movies_card', {id: movie.id})}}"><h4 class="card-title text-center">{{movie.name}}</h4></a>
            </div>
            <img class="card-img-top" src="{{movie.cover}}" alt="" width="100%" height="50%">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
